#!/bin/sh

# [ "$(stat -c %y ~/.cache/corona 2>/dev/null | cut -d' ' -f1)" != "$(date '+%Y-%m-%d')" ] &&
curl -s https://corona.lmao.ninja/v2/states > ~/.cache/corona

json2tsv < ~/.cache/corona | grep -A 5 "Texas" |
  sed "s/\s/:/g; s/.*:.*://" |
  tr '\n' ' ' |
  awk '{print "ðŸ˜· " $3 " (" $4 ") ðŸ’€ " $5 " (" $6 ")"}'
